<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="InstaClone.Views.NavigationBarView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fonts="clr-namespace:InstaClone.Fonts">
    <Grid ColumnDefinitions="*, auto, auto">
        <Image
            HorizontalOptions="Start"
            Source="insta_logo.png"
            WidthRequest="120" />
        <Label
            Grid.Column="1"
            Style="{StaticResource IconStyle}"
            Text="{x:Static fonts:MaterialFont.HeartOutline}" />
        <Label
            Grid.Column="2"
            Margin="15,0,0,0"
            Style="{StaticResource IconStyle}"
            Text="{x:Static fonts:MaterialFont.FacebookMessenger}" />
    </Grid>
</ContentView>